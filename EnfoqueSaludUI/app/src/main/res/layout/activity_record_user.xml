<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RecordUser">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Crear Nueva Cuenta"
                android:textColor="@color/secondary"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutNameCompleted"
                android:layout_width="324dp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="32dp"
                app:errorTextAppearance="@style/TextAppearance.App.TextInputLayoutError"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtNameCompleted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Ingresa Nombre Completo"
                    android:inputType="text"
                    app:endIconMode="clear_text"
                    app:startIconContentDescription="@string/content_description_start_icon"
                    tools:ignore="ExtraText" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutLastNameCompleted"
                android:layout_width="324dp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="10dp"
                app:errorTextAppearance="@style/TextAppearance.App.TextInputLayoutError"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutNameCompleted">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtLastNameCompleted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Ingresa Apellidos Completo"
                    android:inputType="text"
                    app:endIconMode="clear_text"
                    app:startIconContentDescription="@string/content_description_start_icon"
                    tools:ignore="ExtraText" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutTypeDocument"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="6dp"
                android:hint="Tipo Doc."
                app:boxStrokeColor="#00000000"
                app:errorTextAppearance="@style/TextAppearance.App.TextInputLayoutError"
                app:layout_constraintEnd_toStartOf="@+id/layoutNumDocument"
                app:layout_constraintStart_toStartOf="@+id/layoutLastNameCompleted"
                app:layout_constraintTop_toBottomOf="@+id/layoutLastNameCompleted">

                <AutoCompleteTextView
                    android:id="@+id/txtTypeDocument"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_background"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutNumDocument"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="12dp"
                app:errorTextAppearance="@style/TextAppearance.App.TextInputLayoutError"
                app:layout_constraintEnd_toEndOf="@+id/layoutLastNameCompleted"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/layoutTypeDocument"
                app:layout_constraintTop_toBottomOf="@+id/layoutLastNameCompleted">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtNumDocument"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Num de Doc."
                    android:inputType="number"
                    app:endIconMode="clear_text"
                    app:startIconContentDescription="@string/content_description_start_icon"
                    tools:ignore="ExtraText" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutGender"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="6dp"
                android:hint="Género"
                app:boxStrokeColor="#00000000"
                app:errorTextAppearance="@style/TextAppearance.App.TextInputLayoutError"
                app:layout_constraintEnd_toStartOf="@+id/layoutDateOfBirth"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/layoutTypeDocument"
                app:layout_constraintTop_toBottomOf="@+id/layoutTypeDocument">

                <AutoCompleteTextView
                    android:id="@+id/autoCompleteGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_background"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutDateOfBirth"
                android:layout_width="0dp"
                android:layout_height="85dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="12dp"
                android:hint="Fecha de Nac."
                app:errorTextAppearance="@style/TextAppearance.App.TextInputLayoutError"
                app:layout_constraintEnd_toEndOf="@+id/layoutNumDocument"
                app:layout_constraintStart_toEndOf="@+id/layoutGender"
                app:layout_constraintTop_toBottomOf="@+id/layoutNumDocument">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="date"
                    app:endIconMode="clear_text"
                    app:startIconContentDescription="@string/content_description_start_icon"
                    tools:ignore="ExtraText" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutPhone"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="12dp"
                app:errorTextAppearance="@style/TextAppearance.App.TextInputLayoutError"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutDateOfBirth">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Ingresa Numero de Telefono"
                    android:inputType="number"
                    app:endIconMode="clear_text"
                    app:startIconContentDescription="@string/content_description_start_icon"
                    tools:ignore="ExtraText" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutUsernameRecord"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="12dp"
                app:errorTextAppearance="@style/TextAppearance.App.TextInputLayoutError"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutPhone">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtUsernameRecord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Ingresar Usuario"
                    android:inputType="text"
                    app:endIconMode="clear_text"
                    app:startIconContentDescription="@string/content_description_start_icon"
                    tools:ignore="ExtraText" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutPassword"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="12dp"
                app:endIconMode="password_toggle"
                app:errorTextAppearance="@style/TextAppearance.App.TextInputLayoutError"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutUsernameRecord">


                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    app:startIconContentDescription="@string/content_description_start_icon" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRegister"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="20dp"
                android:onClick="registerUser"
                android:textSize="18dp"
                android:text="Registrar"
                app:cornerRadius="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutPassword" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintHorizontal_chainStyle="packed"
                android:text="Ya tienes una Cuenta? "
                app:layout_constraintEnd_toStartOf="@+id/btnMain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnRegister" />

            <TextView
                android:id="@+id/btnMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Iniciar Sesion"
                android:textColor="@color/secondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView5"
                app:layout_constraintTop_toBottomOf="@+id/btnRegister" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>