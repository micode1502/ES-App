<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/rv_item_m"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:outlineSpotShadowColor="#00000000"
        android:layout_marginVertical="15dp"
        app:cardCornerRadius="10dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/secondary_variant2">

            <!-- Imagen a la izquierda -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:contentDescription="Doctor"
                app:layout_constraintVertical_bias="1"
                android:scaleType="centerCrop"
                android:src="@drawable/doctor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/glMedical"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glMedical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.45"
                android:orientation="vertical"/>
            <!-- Título -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Dr. Pawan"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintVertical_chainStyle="packed"
                app:layout_constraintStart_toEndOf="@+id/glMedical"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                app:layout_constraintEnd_toStartOf="@+id/glMedical3"
                app:layout_constraintBottom_toTopOf="@id/tvdescription"/>

            <!-- Descripción -->
            <TextView
                android:id="@+id/tvdescription"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="Especialista en Cardiología con más de 10 años de experiencia"
                app:layout_constraintStart_toEndOf="@+id/glMedical"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                app:layout_constraintEnd_toStartOf="@+id/glMedical3"
                app:layout_constraintBottom_toTopOf="@+id/glMedical2"
                android:layout_marginTop="4dp"/>

            <!-- Icono de estrella -->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glMedical2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.65"
                android:orientation="horizontal"/>
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/glMedical3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.95"
                android:orientation="vertical"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/mbSeeMedical"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingHorizontal="16dp"
                android:text="Ver"
                app:layout_constraintStart_toEndOf="@id/glMedical"
                app:layout_constraintTop_toBottomOf="@id/glMedical2" />

            <ImageView
                android:id="@+id/starImageView"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Rating"
                android:src="@drawable/star_24"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintBottom_toBottomOf="@+id/mbSeeMedical"
                app:layout_constraintEnd_toStartOf="@+id/tvMinutesAgo"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toEndOf="@+id/glMedical"
                app:layout_constraintTop_toBottomOf="@id/glMedical2" />
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvMinutesAgo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="4.9"
                android:textStyle="bold"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/starImageView"
                app:layout_constraintTop_toBottomOf="@id/glMedical2"
                app:layout_constraintEnd_toStartOf="@id/glMedical3"
                app:layout_constraintBottom_toBottomOf="@id/starImageView"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>